<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
		<shape>
            <gradient
                android:startColor="#D1D3D4"
                android:endColor="#A7A9AC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A7A9AC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#0791C6" />
            <stroke
                android:width="1dp"
                android:color="#20419B" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_checked="true"> 
        <shape>
            <gradient
                android:startColor="#D1D3D4"
                android:endColor="#A7A9AC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A7A9AC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
    	<shape>
            <gradient
                android:startColor="#D1D3D4"
                android:endColor="#A7A9AC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A7A9AC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>